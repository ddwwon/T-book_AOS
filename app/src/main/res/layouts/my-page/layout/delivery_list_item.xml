<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/order_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_date"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"/>

    <TextView
        android:id="@+id/expected_delivery_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/main_color"
        android:layout_alignParentRight="true"
        android:text="@string/expected_delivery_date"/>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_list"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/example_product"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_name"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/product_image"
        android:layout_alignRight="@id/invoice_num"
        android:layout_below="@id/order_list"/>

    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:text="LG전자 2022 그램15(12세대)"
        android:layout_marginTop="20dp"
        android:layout_below="@id/expected_delivery_date"/>

    <TextView
        android:id="@+id/invoice_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invoice_num"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/product_image"/>

    <TextView
        android:id="@+id/text_invoice_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"
        android:text="2022202220222022"
        android:layout_below="@id/text_product_name"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/delivery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"
        android:text="@string/delivery_address"
        android:layout_below="@id/invoice_num"
        android:layout_alignLeft="@id/invoice_num"/>

    <TextView
        android:id="@+id/text_delivery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"
        android:text="진주시 진주대로 501 30동 313호"
        android:layout_below="@id/text_invoice_num"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/delivery_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/delivery_worker"
        android:textColor="@color/middle_gray"
        android:layout_below="@id/delivery_address"
        android:layout_alignLeft="@id/delivery_address"/>

    <TextView
        android:id="@+id/text_delivery_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"
        android:text="김리본"
        android:layout_below="@id/text_delivery_address"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/pay_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"
        android:text="@string/pay_amount"
        android:layout_below="@id/delivery_worker"
        android:layout_alignLeft="@id/delivery_worker"/>

    <TextView
        android:id="@+id/text_pay_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_delivery_worker"
        android:text="1,341,350원"/>


</RelativeLayout>